{
  "name": "jewelry.shop",
  "description": "Jewelry Social Commerce",
  "version": "0.0.1",
  "license": "DZR",
  "private": true,
  "scripts": {
    "dev": "run-p dev:css dev:run",
    "dev:css": "onchange \"./static/**/*.scss\" -- npm run css",
    "dev:run": "sapper dev",
    "css": "run-s css:scss css:pcss",
    "css:scss": "sass --no-source-map -s compressed ./src/styles/global.scss ./static/global.css",
    "css:pcss": "postcss ./static/global.css -o ./static/global.css",
    "build": "run-s css build:sapper",
    "build:sapper": "sapper build --legacy",
    "build:export": "sapper export --legacy",
    "real": "cross-env NODE_ENV=production run-s css build:sapper",
    "export": "cross-env NODE_ENV=production run-s css build:export",
    "start": "node __sapper__/build",
    "serve": "serve ___sapper__/export",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "polka": "next",
    "sirv": "^1.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/preset-env": "^7.12.13",
    "@babel/runtime": "^7.12.13",
    "@fortawesome/free-brands-svg-icons": "^5.15.2",
    "@fortawesome/free-regular-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.2.3",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-url": "^6.0.0",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.4",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.5",
    "postcss-cli": "^8.3.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-load-config": "^3.0.1",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.38.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.1",
    "sass": "^1.32.7",
    "simplebar": "^5.3.0",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.32.2",
    "svelte-fa": "^2.2.0",
    "svelte-preprocess": "^4.6.6",
    "tailwindcss": "^1.9.6"
  }
}
